{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessagePrefix": "⬆️",
  "extends": [
    "group:allNonMajor"
  ],
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "after 11am every friday"
  ],
  "labels": [
    "enhancement"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "python"
      ],
      "rangeStrategy": "replace"
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "rangeStrategy": "pin"
    }
  ]
}
